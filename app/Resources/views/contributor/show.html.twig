{% extends 'base.html.twig' %}

{% block body %}
    <h1>Contributor</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contributor.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ contributor.name }}</td>
            </tr>
            <tr>
                <th>Maxnumber</th>
                <td>{{ contributor.maxNumber }}</td>
            </tr>
            <tr>
                <th>Ismnms</th>
                <td>{% if contributor.isMnms %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('workshop_contributor_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('workshop_contributor_edit', { 'id': contributor.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

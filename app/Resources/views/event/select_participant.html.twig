{% extends 'base.html.twig' %}

{% block body %}
<a class="btn btn-default btn-block" href="{{ path('workshop_list') }}">Terminer</a>

    <h2>Sélection des participants</h2>
    {{ form_start(form2) }}

    {{ form_widget(form2.usrOid) }}

    <input type="submit" value="Ajouter"/>
    {{ form_end(form2)}}

    {{ form_start(form1) }}
    {{ form_widget(form1) }}
    <input type="submit" value="Créer"/>
    {{ form_end(form1)}}

    <ul>
        {% for participant in participants %}

            <li>

                <ul>

                    <li>{{ participant.usrOid.firstname}}</li>
                    <li>{{ participant.usrOid.lastname}}</li>
                    <li>{{ participant.usrOid.email}}</li>
                </ul>
            </li>

        {% endfor %}
    </ul>

{% endblock %}
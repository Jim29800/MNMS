{% extends 'base.html.twig' %}

{% block body %}
<div class="col-xs-12 col-md-offset-3 col-md-6 text-center">

    <h1>Participant</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>

                <th>E-mail</th>
                <td>{{ user.email }}</td>

                <th>Avatar</th>
                <td><img src="{{ asset('uploads/user/avatars/' ~ user.avatar) }}" alt="avatar"></td>

            </tr>
            <tr>
                <th>Fonction</th>
                <td>{{ user.function }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="list-unstyled">
        <li class="form-bottom-margin">
            <a class="btn btn-default  " href="{{ path('user_list', { 'id': user.id }) }}">Retour à la liste</a>
        </li>

        <li class="form-bottom-margin">
            <a class="btn btn-default  " href="{{ path('user_edit', { 'id': user.id }) }}">Modifier</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
</div>
{% endblock %}

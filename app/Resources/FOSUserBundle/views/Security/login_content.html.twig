{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
    <div class="col-md-4 col-md-offset-4 col-xs-10 col-xs-offset-1 form-group login">
        <div class="row">
            <div class="col-md-10 col-md-offset-1 col-xs-10 col-xs-offset-1">
                <img id="profile-img" class="profile-img-card" src="../images/mnms-logo.png" />
            </div>
        </div>
        {# Message d'erreur sur la page de login #}
        <div class="row">
            <div class="col-xs-10 col-xs-offset-1">
                {% if error %}
                    <div class="text-center redBold">{{ error.messageKey|trans(error.messageData, 'security') }}</div><br>
                {% endif %}
            </div>
        </div>
        {# 1er input username #}
        <div class="row">
            <div class="col-md-10 col-md-offset-1 col-xs-10 col-xs-offset-1">
                <label for="username">{{ 'security.login.username'|trans }}</label>
                <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
            </div>
        </div>
        {# 2Ã¨me input password #}
        <div class="row">
            <div class="col-md-10 col-md-offset-1 col-xs-10 col-xs-offset-1">    
                <label for="password">{{ 'security.login.password'|trans }}</label>
                <input class="form-control" type="password" id="password" name="_password" required="required" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-10 col-md-offset-1 col-xs-10 col-xs-offset-1">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                <label class="control-label"for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
            </div>
        </div>
        <div class="row">
            <div class="col-md-10 col-md-offset-1 col-xs-10 col-xs-offset-1">
                <input class="btn btn-default orangeBold btn-block btn-signin" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}"/>
            </div>
        </div>
    </div>
</form>


